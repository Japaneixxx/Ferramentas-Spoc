{
  "manifest_version": 3,
  "name": "Ferramentas Spoc",
  "version": "1.3.2",
  "description": "Ferramentas para ajudar na utilização do SPOC",
  "author": "Japa (João Vitor Sarrizo)",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
  {
    "resources": ["jquery.min.js"],
    "matches": ["<all_urls>"]
  }
],

  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "click_save_button": {
      "suggested_key": {
        "default": "Alt+O",
        "mac": "Alt+O"
      },
      "description": "Clica no botão Salvar"
    },
    "clear_page" : {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Limpa a página"
    },
    "copy_and_paste_text" : {
      "suggested_key": {
        "default": "Alt+I",
        "mac": "Alt+I"
      },
      "description": "Copia e cola o texto"
    },
    "fotos_button" : {
      "suggested_key": {
        "default": "Alt+K",
        "mac": "Alt+K"
      },
      "description": "Abre as fotos da vistoria"
    }
  }
}